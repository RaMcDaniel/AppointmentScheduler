<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.AppointmentMenuController">
   <children>
      <Label layoutX="338.0" layoutY="21.0" text="All Appointments">
         <font>
            <Font size="16.0" />
         </font>
      </Label>
      <TableView fx:id="allAppointmentsTable" layoutX="20.0" layoutY="89.0" onSort="#onAllAppointmentsTable" prefHeight="414.0" prefWidth="766.0">
        <columns>
          <TableColumn prefWidth="75.0" text="C1" />
          <TableColumn prefWidth="75.0" text="C2" />
        </columns>
      </TableView>
      <Button fx:id="addAppointment" layoutX="308.0" layoutY="515.0" mnemonicParsing="false" onAction="#onAddAppointment" text="Add" />
      <Button fx:id="modifyAppointment" layoutX="376.0" layoutY="515.0" mnemonicParsing="false" onAction="#onModifyAppointment" text="Modify" />
      <Button fx:id="deleteAppointment" layoutX="453.0" layoutY="515.0" mnemonicParsing="false" onAction="#onDeleteAppointment" text="Delete" />
      <Button fx:id="allAppointmentsExit" layoutX="729.0" layoutY="554.0" mnemonicParsing="false" onAction="#onAllAppointmentsExit" text="Exit" />
      <Label layoutX="587.0" layoutY="558.0" text="Return to Main Menu" />
      <RadioButton fx:id="allAppointmentViewWeekRadio" layoutX="167.0" layoutY="56.0" mnemonicParsing="false" onAction="#onAllAppointmentViewWeekRadio" text="View by Week">
         <toggleGroup>
            <ToggleGroup fx:id="allAppointmentWeekMonth" />
         </toggleGroup>
      </RadioButton>
      <RadioButton fx:id="allAppointmentViewMonthRadio" layoutX="352.0" layoutY="56.0" mnemonicParsing="false" onAction="#onAllAppointmentViewMonthRadio" text="View by Month" toggleGroup="$allAppointmentWeekMonth" />
      <RadioButton fx:id="allAppointmentViewAllRadio" layoutX="523.0" layoutY="56.0" mnemonicParsing="false" onAction="#onAllAppointmentViewAllRadio" text="View All" toggleGroup="$allAppointmentWeekMonth" />
   </children>
</AnchorPane>
