            <TableColumn fx:id="appLocation" prefWidth="102.4000244140625" text="Location" />
            <TableColumn fx:id="appType" prefWidth="75.20001220703125" text="Type" />
            <TableColumn fx:id="startTime" prefWidth="102.39996337890625" text="Start Time" />
            <TableColumn fx:id="endTime" prefWidth="82.39996337890625" text="End Time" />
            <TableColumn fx:id="customerID" prefWidth="77.5999755859375" text="Customer" />
            <TableColumn fx:id="userID" prefWidth="61.59991455078125" text="User" />
            <TableColumn fx:id="contactID" prefWidth="72.0" text="Contact" />
         </columns>
      </TableView>
   </children>
</AnchorPane>
