<AnchorPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.YourScheduleController">
   <children>
      <Button fx:id="yourScheduleViewAppt" layoutX="440.0" layoutY="547.0" mnemonicParsing="false" onAction="#onYourScheduleViewAppt" text="View" />
