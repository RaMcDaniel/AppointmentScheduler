            <ToggleGroup fx:id="weekOrMonth" />
         </toggleGroup>
      </RadioButton>
      <RadioButton fx:id="thisMonthRadio" layoutX="359.0" layoutY="70.0" mnemonicParsing="false" onAction="#onThisMonthRadio" text="This Month" toggleGroup="$weekOrMonth" />
